@model IEnumerable<MealIngredientViewModel>
<div class="row">
	<div class="col-xs-6 col-sm-9 col-md-9 col-lg-9">
		<h1 class="page-title txt-color-blueDark">
			<i class="fa-fw fa fa-wrench"></i>
			Ingredient
			<span>
				>
				List
			</span>
		</h1>
	</div>
	<div class="col-xs-6 col-sm-3 col-md-3 col-lg-3">
		<a asp-action="Add" class="btn btn-primary btn-lg pull-right header-btn" asp-route-id="@ViewBag.MealId">
			<i class="fa fa-plus fa-lg"></i> &nbsp; Add Ingredient
		</a>
	</div>
</div>
<section id="widget-grid">
	<div class="row">
		<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">
			<!-- Widget ID (each widget will need unique ID)-->
			<div class="jarviswidget jarviswidget-color-blueDark" id="mealingedient-list" data-widget-deletebutton="false">
				<header>
					<span class="widget-icon"> <i class="fa fa-table"></i> </span>
					<h2>@ViewBag.MealName</h2>
				</header>
				<div>
					<div class="jarviswidget-editbox">
					</div>
					<div class="widget-body no-padding">
						<table id="dt-mealingedient-list" class="table table-striped table-bordered table-hover" data-page-length="25" width="100%">
							<thead>
                                <tr>
                                    <th data-hide="phone">Id</th>
                                    <th data-hide="phone">Name</th>
                                    <th data-hide="phone">Measure</th>
                                    <th data-hide="phone">Unit</th>
                                    <th data-hide="phone">Edit</th>
                                    <th data-hide="phone,tablet" class="no-sort">Delete</th>
                                </tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
                                <tr data-row-id="@item.Id">
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ItemName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Measure)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Unit)</td>
                                    <td class="actions-column">
                                        <div class="btn-group ">
                                            <a asp-action="edit" asp-controller="Ingredient" asp-route-id="@item.Id" class="btn btn-xs btn-primary">
                                                <i class="fa fa-wrench"></i> <span class="">Edit</span>
                                            </a>
                                        </div>
                                    </td>
                                    <td class="actions-column">
                                        <form class="form-btn padding-left-10" asp-action="delete" asp-route-ingredientid="@item.Id" asp-route-mealid="@item.MealId">
                                            <button class="btn btn-xs btn-danger" data-action="delete" data-item-id="@item.Id" data-related-dt="#dt-ingedient-list">
                                                <i class="fa fa-times"></i>
                                                <span class="">Delete</span>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</article>
	</div>
</section>
<script type="text/javascript">
		$(document).ready(function () {
			new MealIngredient.Index({
				context: '#widget-grid',
				tableElement: '#dt-mealingedient-list'
			});
		});
</script>


