@if (Model.ShoppingList != null)
{
    <table id="dt-shopping-list" class="table table-striped table-bordered table-hover" data-page-length="25" width="100%">
        <thead>
            <tr>
                @*<th data-hide="phone">Id</th>*@
                <th data-hide="phone">Name</th>
                <th data-hide="phone">Measure</th>
                <th data-hide="phone">Unit</th>
                <th data-hide="phone,tablet" class="no-sort">Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ShoppingList)
            {
                <tr data-row-id="@item.Id">
                    @*<td>@Html.DisplayFor(modelItem => item.Id)</td>*@
                    <td>@Html.DisplayFor(modelItem => item.Item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Measure)</td>
                    <td>@Html.DisplayFor(modelItem => item.Unit)</td>
                    <td>@Html.DisplayFor(modelItem => item.Item.Category)</td>
                </tr>
            }
        </tbody>
    </table>
}
